{% extends "base.html.jinja" %}
{% block title %}Squawker{% endblock %}
{% block content %}
{% if form.name.errors %}
    <ul class="errors">
    {% for error in form.name.errors %}
        <li>{{ error }}</li>
    {% endfor %}
    </ul>
{% endif %}
<form method="POST" action="/edit_profile_test">
    {{ form.csrf_token }}
    {{ form.name.label }} {{ form.name(size=20) }}<br>
    {{ form.pictureHash.label }} {{ form.pictureHash(size=20) }}<br>
    {{ form.pgp_pub_key.label }} {{ form.pgp_pub_key(size=20) }}<br>
    {{ form.bio.label }} {{ form.bio(size=200) }}<br>
    <input type="submit" value="Update Profile">
</form>

{% endblock %}
{% block leftcolumn %}
{% include "wallet.html.jinja" %}
{% endblock %}
{% block rightcolumn %}
{% include "sidebar.html.jinja" %}
{% endblock %}