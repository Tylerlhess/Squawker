{% extends "base.html.jinja" %}
{% block title %}Squawker{% endblock %}
{% block content %}
{% if form.kaw.errors %}
    <ul class="errors">
    {% for error in form.kaw.errors %}
        <li>{{ error }}</li>
    {% endfor %}
    </ul>
{% endif %}
<form method="POST" action="/new_message">
    {{ form.csrf_token }}
    {{ form.kaw.label }} {{ form.kaw(size=20) }}<br>
    <input type="submit" value="Submit Kaw">
</form>

{% endblock %}
{% block leftcolumn %}
{% include "wallet.html.jinja" %}
{% endblock %}
{% block rightcolumn %}
{% if session['address'] %}
    {% include "sidebar_profile.html.jinja" %}
{% else %}
    {% include "login_banner.html.jinja" %}
{% endif %}
{% endblock %}